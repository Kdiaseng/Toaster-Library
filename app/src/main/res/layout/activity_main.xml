<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btnToastStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toast_center_start">
        </Button>

        <Button
            android:id="@+id/btnToastCenterVertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toast_center_verticall">
        </Button>

        <Button
            android:id="@+id/btnToastCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toast_center">
        </Button>

        <Button
            android:id="@+id/btnToastCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toast_custom">
        </Button>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>